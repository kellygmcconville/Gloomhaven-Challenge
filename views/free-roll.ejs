<%- include("partials/header"); -%>

<!-- Heading/explanation of website -->
<section id="header">
  <div class="container-fluid heading-container">
    <h1 class="big-heading">Gloomhaven Challenge Mode!</h1>
    <h3 class="small-heading">Roll to generate your challenge</h3>
    <h5 class="real-small-heading">Each character in the party rolls for their effects.</h5>
  </div>
</section>

<!-- Add Character button -->
<section id="roll-button">
  <div class="container-fluid button-container">
      <div class="">
        <button class="btn btn-dark btn-lrg roll-button" onclick="randomEffects()" type="button" name="button"><i class="fas fa-dice-six"></i> Roll <i class="fas fa-dice-six"></i></button>
      </div>
  </div>
</section>

<!-- Challenge results -->
<section id=challenge-results>
  <div class="container-fluid challenge-container">
    <div class="row">
      <div class="col-6">
        <h3><u>Negative Effects</u></h3>
        <span id="negativeEffect" class="challenge-results"></span>
      </div>
      <div class="col-6">
        <h3><u>Positve Effects</u></h3>
        <span id="positiveEffect" class="challenge-results"></span>
      </div>
    </div>
  </div>
</section>

<script src=scripts/scripts.js type="text/javascript"></script>

<%- include("partials/footer"); -%>
