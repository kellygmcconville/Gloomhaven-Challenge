<%- include("partials/header"); -%>

<div class="container-fluid challenge-container">
  <div class="row">
    <div class="col">
      <h3><u>Negative Effects</u></h3>
      <% effectItems.forEach(function(effect){%>
        <% if(effect.type === "Negative"){%>
            <div>
              <p><%= effect.content %></p>
              <form action="/delete" method="post">
                <button type="submit" name="delete" value="<%= effect._id%>">x</button>
              </form>
            </div>
            <input type="hidden" name="listName" value="Negative"></input>
        <%}%>
      <%}) %>
      <form action="/" method="post">
        <input type="text" name="newContent" placeholder="Content" autocomplete="off">
        <button type="submit" name="type" value="Negative">+</button>
      </form>
    </div>
    <div class="col">
      <h3><u>Positve Effects</u></h3>
      <% effectItems.forEach(function(effect){%>
        <% if(effect.type === "Positive"){%>
          <div>
            <p><%= effect.content %></p>
            <form action="/delete" method="post">
              <button type="submit" name="delete" value="<%= effect._id%>">x</button>
            </form>
          </div>
            <input type="hidden" name="listName" value="Positive"></input>
        <%}%>
      <%}) %>
      <form action="/" method="post">
        <input type="text" name="newContent" placeholder="Content" autocomplete="off">
        <button type="submit" name="type" value="Positive">+</button>
      </form>
    </div>
  </div>
</div>
<%- include("partials/footer"); -%>
